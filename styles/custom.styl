@import 'bootstrap/bootstrap/index.styl'
@import 'vars.styl'

@font-face
	font-family Roboto
	src url(../fonts/Roboto-Regular.ttf)
@font-face
	font-family Roboto-Medium
	src url(../fonts/Roboto-Medium.ttf)
.divider
	margin-bottom -7px
	margin-top 10%
	position relative
	height 15px
	.left
	.right
		absolute top 7px
		width 47%
		height 2px
		background l-gray
	.left
		left 0
	.right
		right 0
	.inner
		width 15px
		height 15px
		background l-gray
		border-radius 50%
		position absolute
		left calc(50% - 7px)
.order
	background red
	border none
	outline none
	color white
	text-align center
	font-size 2em
	background linear-gradient(top, orange, red)
	border-radius 7px
	margin-top 5%
	padding 0.2em 0.8em
	&:hover
		background linear-gradient(top, d-orange, d-red)
html
	height 100%
body
	overflow-x hidden
	position relative
	font-family Roboto
	height 100% !important
.container-fluid[id^='screen-']
	background d-gray
	.container
		max-width 1050px
#screen-1
	background-image url(../images/bg.jpg)
	background-position 50% -15% !important
	background-attachment fixed
	background-repeat no-repeat
	background-size cover
	padding-top 50px
	text-shadow 1px 1px 1px d-gray
	.header
		margin-top 4%
	.brand
		color white
		text-align center
		.brand-primary
			font-size 5em
			font-weight bold
	.info
		padding-right 0
		text-align center
		h3
			color white
			text-shadow 1px 1px 1px d-gray
			display block
	.order-box-wrapper
		position relative
		margin-top 3%
		margin-bottom 7%
		text-shadow none
		.desc-box
			text-shadow 1px 1px 1px d-gray
			text-align center
			color white
			img
				width 70%
		.order-box
			border-radius 7px
			padding 15px
			background d-white
			h3
				margin-top 0
				text-align center
				color d-gray
			.original-price
				color gray
				display block
				text-align center
				font-size 1.25em
				text-decoration line-through
			.new-price
				display block
				text-align center
				font-size 2em
				color d-red
			hr
				margin-top 7%
				height 1px
				background d-gray
				color d-gray
				border none
			table
				margin-top -5%
				width 100% !important
				td
					padding 0.5em
					input
						display inline-block
						width 100%
						padding 0.3em
			.order
				display block
				margin 7% auto 0 auto
@media(max-width $screen-sm-min)
	#screen-1
		.header
			margin-top 20% !important
			margin-bottom 10% !important
			.brand-primary
				font-size 3em !important
		.desc-box
			margin-top 10% !important
			margin-bottom 10% !important
		.order-box
			h3
				text-align center
				font-size 1.25em
			.discount-timer
				.left
				.right
					font-size 2em !important
@media(max-width $screen-sm-max) and (min-width $screen-sm-min)
	.order-box
		margin-top 10% !important
	.discount-timer
			.left
			.right
				font-size 4em !important
#screen-2
	background-image url(../images/texture-bg.jpg)
	background-position 50% 50%
	background-attachment fixed
	background-repeat no-repeat
	background-size cover
	position relative
	color white
	text-shadow 1px 1px 2px d-gray
	.header
		margin-top 4%
	.brand
		text-align center
		.brand-primary
			font-size 5em
			font-weight bold
	.descs
		margin-top 10%
		.desc-wrapper
			text-align center
			img
				width 60%
				border-radius 7px
			h4
				font-size 1.5em
				font-weight bold
				margin 7% 0
			span
				color d-white
	.order-btn
		margin 5% 0
		text-align center
@media(max-width $screen-sm-max)
	.header
		margin-top 20% !important
		margin-bottom 0 !important
	.desc-wrapper
		margin-top 20% !important
		img
			width 40% !important
#screen-3
	text-shadow 1px 1px 2px d-gray
	color white
	.row
		margin 7% 0
		.purse-img-wrapper
			.purse-img
				border-radius 7px
				width 100%
		.purse-desc-wrapper
			h3
				font-family Roboto-Medium
				margin 0
				line-height 1.5em
				text-transform uppercase
				text-align center
			span
				color d-white
				line-height 1.75em
				display inline-block
				margin-top 5%
				text-transform uppercase
			.heading
				line-height 1.5em
				margin 7% 0 2% 0
				font-family Roboto-Medium
				display inline-block
				width 100%
				text-align center
				font-weight bold
	.divider
		margin-bottom 0
#screen-4
	position relative
	padding-top 5%
	.row
		margin 0
		h1
			font-family Roboto-Medium
			margin-bottom 5%
			color white
			text-align center
		.video-wrapper
			margin 0 auto
			cursor pointer
			width 84%
			video
				width 100%
				height 100%
	.divider
		margin-top 5%
#screen-5
	h1
		font-family Roboto-Medium
		margin 5%
		color white
		text-align center
	ul
		padding 0
		li
			width 25%
			height 100%
			list-style none
			margin-bottom 5%
			img
				cursor pointer
				width 100%
	.divider
		margin-top 0
	.modal-content
		.modal-header
			.container-fluid
				background transparent
				padding 0
				h4
					display inline-block
					width 80%
				button
					float right
		.modal-body
			text-align center
			img
				display block
				margin 0 auto
#screen-6
	background d-white
	h1
		font-family Roboto-Medium
		margin 5% 0
		text-align center
	.second-row
		margin-top 5%
	.benefit
		.container-fluid
			background transparent
			text-align left
			h4
				line-height 1.5em
				text-transform uppercase
				font-size 1.25em
@media(max-width $screen-sm-max)
	.benefit
		.container-fluid
			text-align center !important
			h4
				font-size 0.75em !important
#screen-7
	color white
	h1
		font-family Roboto-Medium
		margin 5% 0
		text-align center
	.feedback
		margin-top 5%
		.col-md-3
			text-align center
		.col-md-9
			padding-left 5%
			span
				color d-white
				display inline-block
				margin-top 2%
				font-style italic
				font-size 1.25em
@media(max-width $screen-md)
	.col-md-9
		text-align center
#screen-8
	background d-white
	h1
		font-family Roboto-Medium
		margin 5% 0 0 0
		text-align center
	.work-description
		margin-top 5%
		text-align center
		div
			img
				width 30%
			span
				display block
				margin-top 5%
				font-size 1.25em
	.delievery-desc
		margin-top 12%
		.col-sm-3
			img
				width 100%
		.col-sm-9
			padding-left 5%
			h3
				margin-top 0
				font-family Roboto-Medium
			span
				display inline-block
				margin-top 5%
				font-size 1.25em
	.delievery-desc-2
		margin-top 5%
@media(max-width $screen-md)
	.work-description div
		margin-top 10%
		img
			width 10% !important
	.delievery-desc h3
			text-align center
@media(min-width $screen-md)
	h1
		margin-bottom 5% !important
#screen-9
	padding-bottom 10%
	color white
	text-align center
	h1
		font-family Roboto-Medium
		margin-top 5%
	.desc-box
		margin-top 5%
		font-size 1em
		.discount-timer
			margin-top 5%
			.col-xs-3
				padding 0 12px
				.title
					text-align center
					width 100%
					display inline-block
				.left
				.right
					width 50%
					text-align center
					font-size 6em
				.left
					text-align right
					float left
				.right
					text-align left
					float right
	.form-box
		padding-top 2%
		margin-top 5%
		background d-white
		color gray
		border-radius 7px
		table
			margin 0 auto
			td
				padding 0.5em
				input
					display inline-block
					width 100%
					padding 0.3em
		button
			margin-top 7%
			margin-bottom 7%
@media(max-width $screen-sm)
	.discount-timer
		.left
		.right
			font-size 4em !important